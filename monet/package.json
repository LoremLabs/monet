{
  "name": "@loremlabs/monet",
  "version": "0.0.3",
  "private": false,
  "browser": true,
  "files": [
    "dist/**",
    "!dist/.elements/**",
    "!dist/storybook/**"
  ],
  "scripts": {
    "start": "yarn storybook",
    "build": "NODE_ENV=production yarn build:all",
    "build:debug": "NODE_ENV=development yarn build:all",
    "serve": "npx serve -n dist",
    "build:all": "yarn build:components && yarn build:elements-base && yarn build:elements",
    "build:components": "TAILWIND_MODE=build node scripts/build-components.js",
    "build:elements-base": "TAILWIND_MODE=build node scripts/build-elements-base.js",
    "build:elements": "rollup -c scripts/elements.rollup.config.js",
    "build:clean": "rimraf dist",
    "storybook": "start-storybook -c .config/storybook/ -p 6006",
    "build-storybook": "build-storybook -c .config/storybook/ -o dist/storybook",
    "prettier:check": "prettier -c .",
    "prettier": "prettier -w ."
  },
  "repository": "github:LoremLabs/monet",
  "license": "MPL-2.0",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-typescript": "^8.2.3",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/addon-viewport": "^6.3.4",
    "@storybook/svelte": "^6.3.4",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.12",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@types/tailwindcss": "^2.2.1",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "cssnano": "^5.0.6",
    "postcss": "^8.3.5",
    "postcss-import": "^14.0.2",
    "postcss-load-config": "^3.1.0",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.1",
    "rollup-plugin-import-css": "^3.0.0",
    "rollup-plugin-sizes": "^1.0.4",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.38.3",
    "svelte-dnd-action": "^0.9.9",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.7.4",
    "tailwindcss": "^2.2.4",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.2"
  },
  "prettier": {
    "singleQuote": false,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
      {
        "files": [
          "package.json",
          "package-lock.json"
        ],
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
