{
  "name": "svelte-vite",
  "version": "0.0.0",
  "scripts": {
    "build": "NODE_ENV=production npm run build:all",
    "build:debug": "NODE_ENV=development npm run build:all",
    "build:all": "npm run build:components && npm run build:elements",
    "build:components": "node scripts/build-components.js",
    "watch:build:components": "nodemon --watch src -e js,svelte scripts/build-components.js",
    "build:elements": "rollup -c scripts/elements.rollup.config.js",
    "build:clean": "npx rimraf 'dist/{components,elements,storybook}'",
    "serve": "npx serve -n dist",
    "start": "npm run storybook",
    "storybook": "start-storybook -c .config/storybook/ -p 6006",
    "build-storybook": "build-storybook -c .config/storybook/ -o dist/storybook"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.10",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@types/tailwindcss": "^2.0.3",
    "autoprefixer": "^10.2.6",
    "cssnano": "^5.0.4",
    "nodemon": "^2.0.7",
    "postcss": "^8.3.0",
    "postcss-import": "^14.0.2",
    "postcss-load-config": "^3.0.1",
    "rollup": "^2.50.2",
    "rollup-plugin-import-css": "^2.0.1",
    "rollup-plugin-sizes": "^1.0.4",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.38.2",
    "svelte-preprocess": "^4.7.3",
    "tailwindcss": "^2.1.2",
    "typescript": "^4.3.2",
    "vite": "^2.3.4"
  },
  "optionalDependencies": {
    "@babel/core": "^7.14.3",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-svelte-csf": "^1.0.0",
    "@storybook/addon-viewport": "^6.2.9",
    "@storybook/svelte": "^6.2.9",
    "babel-loader": "^8.2.2",
    "postcss-loader": "^5.3.0",
    "svelte-loader": "^3.1.1"
  },
  "dependencies": {},
  "prettier": {
    "singleQuote": false,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
      {
        "files": [
          "package.json"
        ],
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
